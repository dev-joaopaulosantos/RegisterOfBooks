<h1>Edite o Livro</h1>

<form action="/books/updatebook" method="post" class="form">
    <input type="hidden" name="id" value="{{book.id}}">
  <div class="form-control">
    <label for="title">Título:</label>
    <input type="text" name="title" placeholder="Escreva o título" value="{{book.title}}" />
  </div>
  <div class="form-control">
    <label for="pageqty">Quantidade de páginas:</label>
    <input type="number" name="pageqty" placeholder="Quantidade de páginas" value="{{book.pageqty}}" />
  </div>
  <input type="submit" value="Editar" />
</form>